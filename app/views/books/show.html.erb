<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info' %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @booker %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@booker.user) do %>
            <%= attachment_image_tag(@booker.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @booker.user.name %>
            <% end %>
          </td>
          <td><%= link_to @booker.title, book_path(@booker) %></td>
          <td><%= @booker.body %></td>
          <td>
            <% if @booker.user_id == current_user.id %>
              <%= link_to 'Edit', edit_book_path(@booker), class: "btn btn-sm btn-success edit_book_#{@booker.id}" %>
            <% end %>
          </td>
          <td>
            <% if @booker.user_id == current_user.id %>
              <%= link_to 'Destroy', book_path(@booker), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>